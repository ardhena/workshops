%h1 Listing categories
%table.table.table-hover
  %tr
    %th Name
    %th Number of products
    %th
  - categories.each do |category|
    %tr
      %td= category.name
      %td= category.products.count
      %td
        %span= link_to 'Show', category, class: "btn btn-primary"
        %span= link_to 'Edit', edit_category_path(category), class: "btn btn-default"
        %span= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"
= link_to 'New Category', new_category_path, class: "btn btn-primary"