%h1 Listing categories
%ol.breadcrumb
  %li.active CATEGORIES

%table.table.table-hover
  %tr
    %th Name
    %th Number of products
    %th
  - categories.each do |category|
    %tr
      %td= category.name
      %td= category.products.count
      %td.text-right
        %span= link_to 'View details', category, class: "btn btn-primary"
        %span= link_to 'List products', category_products_path(category), class: "btn btn-primary"
        - if user_signed_in? && current_user.admin?
          %span= link_to 'Edit', edit_category_path(category), class: "btn btn-default"
          %span= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"

- if user_signed_in? && current_user.admin?
  .buttons
    %span= link_to 'New category', new_category_path, class: "btn btn-primary"