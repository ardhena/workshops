- if controller_name != 'sessions'
  %span= link_to "Log in", new_session_path(resource_name), class: "btn btn-primary"
- if devise_mapping.registerable? && controller_name != 'registrations'
  %span= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-primary"
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  %span= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-default"